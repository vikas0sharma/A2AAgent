# Environment variables for Docker deployment
# Copy this file to .env and update with your actual values

# Application Environment
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:8080

# Authentication Configuration
AUTHENTICATION_TYPE=ApiKey
AUTHENTICATION_APIKEY_HEADERNAME=X-Api-Key
AUTHENTICATION_APIKEY_KEY=your_secret_api_key_here

# API Keys - Replace with your actual API keys
NEWSAPI_APIKEY=your_news_api_key_here
GOOGLE_APIKEY=your_google_api_key_here
HUGGINGFACE_APIKEY=your_huggingface_api_key_here

# OAuth2 Configuration (if using OAuth2)
# AUTHENTICATION_OAUTH2_AUTHORIZATIONENDPOINT=https://dev-p4et7ewo3yll2dvp.us.auth0.com/
# AUTHENTICATION_OAUTH2_TOKENENDPOINT=https://dev-p4et7ewo3yll2dvp.us.auth0.com/oauth/token
# AUTHENTICATION_OAUTH2_AUDIENCE=https://a2aapi.example.com

# OpenID Connect Configuration (if using OpenIdConnect)
# AUTHENTICATION_OPENIDCONNECT_OPENIDCONNECTURL=https://dev-p4et7ewo3yll2dvp.us.auth0.com/.well-known/openid-configuration
# AUTHENTICATION_OPENIDCONNECT_AUTHORIZATIONENDPOINT=https://dev-p4et7ewo3yll2dvp.us.auth0.com/
# AUTHENTICATION_OPENIDCONNECT_AUDIENCE=Audience

# Logging Configuration
LOGGING_LOGLEVEL_DEFAULT=Information
LOGGING_LOGLEVEL_MICROSOFT_ASPNETCORE=Warning